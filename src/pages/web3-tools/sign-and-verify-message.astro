---
import BaseLayout from "../../layouts/BaseLayout.astro";
import MessageSignAndVerify from "../../views/web3-tools/MessageSignAndVerify.astro";
import Seo from "../../components/Seo.astro";

import styles from "./sign-and-verify-message.scss?inline";
---

<BaseLayout>
  <Seo
    slot="seo"
    title="Web3 Message Signing and Verification"
    description="Web3 Message Signing and Verification"
    og={{
      image: "/assets/images/meta/og/sign-and-verify-message.png",
      imageAlt: "Web3 Message Signing and Verification",
    }}
  />
  <style slot="header" is:inline set:html={styles}></style>

  <MessageSignAndVerify />

  <Fragment slot="footer">
    <script src="../../scripts/web3-tools/sign-and-verify-message/index.js"
    ></script>
  </Fragment>
</BaseLayout>
