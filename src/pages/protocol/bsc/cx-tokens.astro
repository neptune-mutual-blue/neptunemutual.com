---
import BaseLayout from "../../../layouts/BaseLayout.astro";
import Seo from "../../../components/Seo.astro";

import styles from "../protocol.scss?inline";

import * as api from "../../../../service/api";
import { Api } from "../../../../types/enum";
import HeaderSection from "../../../components/HeaderSection.astro";
import ProtocolContracts from "../../../views/protocol/ProtocolContracts.astro";

const paginated = await api.getContracts(Api.ContractBSC);

const t = (x: string) => x;
---

<BaseLayout headerStyle={"colored"}>
  <Seo
    slot="seo"
    title="cXTokens / Neptune Mutual Protocol Contracts on BNB Smart Chain Network"
    description="View all cxToken contracts of the Neptune Mutual Protocol on BNB Smart Chain Network"
    og={{
      image: "/assets/images/meta/og/protocol-contracts.png",
      imageAlt:
        "cXTokens / Neptune Mutual Protocol Contracts on BNB Smart Chain Network",
    }}
  />
  <style slot="header" is:inline set:html={styles}></style>

  <HeaderSection
    color={"basic"}
    alignment={"center"}
    heading={t("Neptune Mutual Protocol Contracts")}
  />

  <ProtocolContracts networkId={56} type={"cxTokens"} data={paginated.data} />

  <Fragment slot="footer">
    <script src="../../../scripts/protocol/index.js"></script>
  </Fragment>
</BaseLayout>
