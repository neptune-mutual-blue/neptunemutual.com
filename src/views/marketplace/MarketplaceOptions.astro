---
import Icon from "../../elements/Icon.astro";
import { networks, swaps } from "../../data/networks";

const t = (x: string): string => x;
---

<div class="marketplace options container">
  <div class="inner container">
    <div class="networks section">
      {
        networks.map(({ name, src, srcDark, link, text }) => (
          <a class="network item" href={link}>
            <i data-mode="light">
              <Fragment set:html={src || name} />
            </i>
            <i data-mode="dark">
              <Fragment set:html={srcDark || name} />
            </i>
            <div class="text container">
              <p class="name">{name}</p>
              <p class="text">{text}</p>
            </div>
          </a>
        ))
      }
    </div>

    <div class="get npm section">
      <div class="header">
        <p class="title">Get NPM</p>
        <p class="desc">
          Get NPM governance tokens to: validate cover policies; fulfill the
          locking requirement for providing pool liquidity and voting; and
          unlock enhanced functionalities.
        </p>
      </div>

      <div class="swaps">
        {
          swaps.map(({ src, srcDark, title, href }) => (
            <div class="swap">
              <i data-mode="light">
                <Fragment set:html={src || title} />
              </i>
              <i data-mode="dark">
                <Fragment set:html={srcDark || title} />
              </i>

              <p class="title">{title}</p>

              <a href={href} target="_blank" rel="noreferrer">
                Get NPM
                <Icon variant="chevron-right" size="lg" />
              </a>
            </div>
          ))
        }
      </div>
    </div>
  </div>
</div>
