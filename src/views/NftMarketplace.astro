---
import { NftMarketplace } from "../../service/remote-api/nft-marketplace";
import Hero from "./nft-marketplace/Hero.astro";
import { MarketPlace } from "./nft-marketplace/Marketplace";

const { searchMarketplace, getOrigins } = NftMarketplace;

const { imageOrigin, apiOrigin } = getOrigins();
const { data } = await searchMarketplace();
---

<>
  <Hero />

  <MarketPlace
    client:only
    initialData={data}
    imageOrigin={imageOrigin}
    apiOrigin={apiOrigin}
  />
</>
