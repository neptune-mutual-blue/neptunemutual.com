---
import Hero from "./careers/Hero.astro";
import Benefits from "./careers/Benefits.astro";
import Vacancies from "./careers/Vacancies.astro";
import PreviousVacancies from "./careers/PreviousVacancies.astro";

interface Props {
  vacancies: Vacancy[];
}

const { vacancies } = Astro.props;
const t = (x: string): string => x;

const openVacancies = vacancies.filter(
  (vacancy) => vacancy.expired === false || !vacancy.hasOwnProperty("expired")
);

const previousVacancies = vacancies.filter(
  (vacancy) => vacancy.expired === true
);
---

<Hero />

<Benefits />

<Vacancies vacancies={openVacancies} />

{
  previousVacancies.length >= 1 && (
    <PreviousVacancies vacancies={previousVacancies} />
  )
}
