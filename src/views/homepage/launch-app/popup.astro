---
import Icon from "../../../elements/Icon.astro";
import Button from "../../../elements/buttons/Button.astro";
import { networks } from "./networks";

const t = (x: string): string => x;
---

<div id="launch-app-modal" class="modal container launch-app" data-open="false">
  <div id="modal-content" class="content">
    <button id="launch-modal-close" class="close button">
      <Icon variant="x-close" size={"xs"} />
    </button>
    <div class="header">
      <h2>{t(`Choose Your Marketplace`)}</h2>
    </div>

    <div class="options">
      {
        networks.map(({ link, href, id, value }, i) => (
          <div class="option">
            <input
              type="radio"
              checked={i === 0 && "true"}
              name="application-type"
              value={value}
              id={id}
              data-href={href}
            />
            <label for={id}>
              {value} <span class="link">({link})</span>
            </label>
          </div>
        ))
      }
    </div>
    <div class="buttons container">
      <Button
        type={"anchor"}
        classname={"accept button"}
        id={"launch-app"}
        href={networks[0].href}
        target={"_blank"}
        variant={"primary"}
        size="xl"
      >
        Launch App on <span id="btn-app-type-text" class="app type"
          >{networks[0].value}</span
        >
      </Button>
    </div>
  </div>
</div>
